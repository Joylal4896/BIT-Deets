    <div class="full-post-cover">
        <h1><%= @post.title %></h1>
        <div class="line"></div>
        <div class="posted-on">
            <h5><i>Posted on</i> <%= @post.created_at.strftime('%A, %d %B %Y') %><i> , at </i><%= @post.created_at.strftime('%I:%M %p') %><i> by </i> <%= @post.club %></h5>  
        </div>

        <div class="content-cover">
            <div class="full-post-text">
                <p>
                      <%=  @post.longdesc.gsub(/\n/, '<br>').html_safe %>

                </p><br>

                <div class="venue-time">
                    <h4><strong>Date : </strong><%= @post.eventdatetime.strftime('%A, %d %B %Y') %><span class="space"></span> <strong> Time : </strong><%= @post.eventdatetime.strftime('%I:%M %p') %><span class="space"></span> <strong> Venue : </strong><%= @post.venue %></h4>
                    
                </div>
               <% if @post.video1.url %>
                <div class="video">
                    <iframe width="800" height="450" src="<%= @post.video1.url %>" frameborder="0" allowfullscreen></iframe>
                </div>
                <% else %>
                <% end  %>
