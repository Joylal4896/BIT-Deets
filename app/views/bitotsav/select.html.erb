    <title>BIT Deets</title>

    <!-- Bootstrap -->
    
    <style type="text/css">
        .heading{
          padding: 20px;
          font-size: 30px;
          margin-left: 50px;
        }
        .link-box{
          width: 30%;
          float: left;
          display: inline;
          height: 100px;
          border: 1px solid gray;
          margin: 40px;
          margin-right: 50px;
          text-align: center;
          border-radius: 20px;
          font-size: 30px;
          padding-top: 20px;
        }
        .links a{
          margin-left: 50px;
        }
        .foot{
          padding: 40px;
        }
        .form{
          margin-right: 50px;
          margin-left: 50px;
          margin-top: 200px;
        }
        .top{
          margin: 20px;
        }
    </style>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
      <div class="heading">
        You are logged in - <%= session[:bitotsav] %>
      </div>
      <div class="links">
        <a href="/bitotsav"><button type="button" class="btn btn-default">HOME PAGE</button></a>
        <a href="/bitotsav/select"><button type="button" class="btn btn-default">ADMIN-HOME</button></a>
        <a href="/bitotsav/logout"><button type="button" class="btn btn-default">LOGOUT</button></a>
      </div>

      <center><div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-6">
        
  <% flash.each do |name, msg| -%>
  <br><br>
    <strong><%= content_tag :div, msg, class: 'alert alert-success'%></strong>
  <% end %>
  </div></div></div><div></center>

    <% if session[:bitotsav] == "2k15" %>
     <div class="top"><center>
      <a href="/bitotsav/organisers">
      <div class="link-box">
        Manage Associates
      </div>
      </a></center>
      </div>
      <% else %>
     <div class="top">
      <a href="/bitotsav/volunteers">
      <div class="link-box">
        Manage Volunteers
      </div>
      </a>


      <a href="/bitotsav/organisers">
      <div class="link-box">
        Manage Organisers
      </div>
      </a>
      </div>
      <% end %>
      

      <div class="form">

      

      <div class="panel panel-info">

      <div class="panel-heading">
        All core members are requested to fill this form. Ignore this message if you have already filled.
      </div>

      <div class="panel-body">
      <%= form_tag action: "newcore", method: :post do %>
        <div class="form-group col-lg-6">
          <label>Name</label>
          <input type="text" name="name" class="form-control" placeholder="Name">
        </div>

        <div class="form-group col-lg-6">
          <label>E-mail</label>
          <input type="text" name="email" class="form-control" placeholder="Email">
        </div>

        <div class="form-group col-lg-6">
          <label>Contact number</label>
          <input type="text" name="contact" class="form-control" placeholder="Contact number">
        </div>

        <div class="form-group col-lg-6">
          <label for="basic-url">Facebook link</label>
          <div class="input-group">
          <span class="input-group-addon" id="basic-addon3"><strong>https://www.facebook.com/</strong></span>
          <input type="text" name="fblink" class="form-control" placeholder="Email" id="basic-url" aria-describedby="basic-addon3">
          </div>
        </div>

        <div class="form-group col-lg-6">
        <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <% end %>
      </div>  
  
        
      </div>

      <div class="alert alert-warning" role="alert">
        If any query : <br>
        <strong>Shubham Lal (+91 9693941136)</strong><br>
        mail.shubhamlal@gmail.com<br>
        Facebook link - <a href="https://www.facebook.com/creater.shubham" target="_blank">https://www.facebook.com/creater.shubham</a>

      </div>

      </div>
  </body>
</html>