	<div class="form-horizontal">
  <center><div id="main-container" class="container">
      <div class="row">
        <div class="col-xs-6">
        
  <% flash.each do |name, msg| -%>
    <strong><%= content_tag :div, msg, class: 'alert alert-warning'%></strong>
  <% end %>
  </div></div></div><div></center>
    <%= form_tag(:action => 'attempt_login', :method => 'post') do %>
      <div class="form-group">
        <label for="inputUsername" class="col-sm-2 control-label">Club Admin ID</label>
        <div class="col-lg-4">
          <%= text_field_tag(:username, "",  class: 'form-control' ) %>
       </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Password</label>
        <div class="col-lg-4">
	  <%= password_field_tag(:password, "", class: 'form-control' ) %>
         </div>
	</div>
      

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-7">
          <%= submit_tag("Login", class: 'btn btn-default') %>
